@page
@model Inventario.WebSite.Pages.OrdenCompra.AddModel


<div class="container">
    <h1 class="display-4">Agregar Orden de Compra</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="OrdenCompraDto.MaterialId"></label>
            <input asp-for="OrdenCompraDto.MaterialId" class="form-control" />
            <span asp-validation-for="OrdenCompraDto.MaterialId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrdenCompraDto.ProveedorId"></label>
            <input asp-for="OrdenCompraDto.ProveedorId" class="form-control" />
            <span asp-validation-for="OrdenCompraDto.ProveedorId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrdenCompraDto.Cantidad"></label>
            <input asp-for="OrdenCompraDto.Cantidad" class="form-control" />
            <span asp-validation-for="OrdenCompraDto.Cantidad" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-page="/OrdenCompra/List" class="btn btn-secondary">Cancelar</a>
    </form>
</div>