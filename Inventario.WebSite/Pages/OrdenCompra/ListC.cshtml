@page
@model Inventario.WebSite.Pages.OrdenCompra.List


<head>
    <title>Compras</title>
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
        }
        .title {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            text-align: center;
            margin-top: 20px;
            color: #343a40;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .action-buttons {
            text-align: right;
            margin-top: 20px;
        }
        
    </style>
</head>
<div class="container-fluid">
        <h1 class="title">Compras</h1>

    <div class="row">

        <div class="col-md-4">
                        <a asp-page="/RegistroMaterial/ListRegistroMaterial" class="btn btn-dark" role="button">Regresar</a>
            <a asp-page="/OrdenCompra/Add" class="btn btn-dark" role="button">Agregar</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-10">
            <table class="table">
                <tr>
                    <th>Material ID</th>
                    <th>Cantidad</th>
                    <th>Proveedor ID</th>
                    <th>Fecha Orden</th>
                    <th></th>
                </tr>
                @foreach (var ordenCompra in Model.OrdenesCompra)
                {
                    <tr>
                        <td>@ordenCompra.MaterialId</td>
                        <td>@ordenCompra.Cantidad</td>
                        <td>@ordenCompra.ProveedorId</td>
                        <td>@ordenCompra.FechaOrden.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>