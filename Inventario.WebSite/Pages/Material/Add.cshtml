@page
@model Inventario.WebSite.Pages.Material.Add

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Nuevo material</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="MaterialDto.Nombre"></label>
                    <input asp-for="MaterialDto.Nombre" class="form-control" maxlength="45" />
                    <span class="text-danger" asp-validation-for="MaterialDto.Nombre"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaterialDto.Descripcion"></label>
                    <input asp-for="MaterialDto.Descripcion" class="form-control" maxlength="100" />
                    <span class="text-danger" asp-validation-for="MaterialDto.Descripcion"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaterialDto.Precio"></label>
                    <input asp-for="MaterialDto.Precio" class="form-control" />
                    <span class="text-danger" asp-validation-for="MaterialDto.Precio"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaterialDto.Unidad"></label>
                    <input asp-for="MaterialDto.Unidad" class="form-control" maxlength="20" />
                    <span class="text-danger" asp-validation-for="MaterialDto.Unidad"></span>
                </div>
                
                @if (Model.Errors.Count > 0)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul>
                            @foreach (var error in Model.Errors)
                            {
                                <li>@error</li>
                            }
                        </ul>
                    </div>
                }

                <div class="text-right">
                    <button type="submit" class="btn btn-primary mr-3">Agregar</button>
                        <a class="btn btn-secondary" asp-page="/Material/ListMaterial">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
