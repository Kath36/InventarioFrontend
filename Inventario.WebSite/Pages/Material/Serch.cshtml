@page
@model Inventario.WebSite.Pages.Material.SearchMaterial

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Search Material</h2>
            <form method="get">
                <div class="form-group">
                    <label for="searchName">Search by Name:</label>
                    <input type="text" id="searchName" name="name" class="form-control" />
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <a class="btn btn-secondary" asp-page="/Material/ListMaterial">Cancel</a>
                    </div>
                </div>
            </form>

            @if (Model.MaterialDto != null)
            {
                <h3>Material Details:</h3>
                <div class="form-group">
                    <label>Name:</label>
                    <p>@Model.MaterialDto.Nombre</p>
                </div>
                <div class="form-group">
                    <label>Description:</label>
                    <p>@Model.MaterialDto.Descripcion</p>
                </div>
                <div class="form-group">
                    <label>Price:</label>
                    <p>@Model.MaterialDto.Precio</p>
                </div>
                <div class="form-group">
                    <label>Unit:</label>
                    <p>@Model.MaterialDto.Unidad</p>
                </div>
            }
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
