@page
@model Inventario.WebSite.Pages.DetallePedido.ListDetallePedido

<div class="container-fluid">
        <div class="row">
            <div>
            <h1 class="display-4">Detalle Pedido</h1>
            </div>
            <div class="col-md-4 d-flex justify-content-end">
                   <a asp-page="/DetallePedido/Add" class="btn btn-success btn-custom" role="button">Add</a>
               </div>
        </div>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-10">
            <table class="table">
                <tr>
                    <th>Pedido ID</th>
                    <th>Material ID</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
                @foreach (var detallePedido in Model.DetallePedidos)
                {
                    <tr>
                        <td>@detallePedido.Pedido_ID</td>
                        <td>@detallePedido.Material_ID</td>
                        <td>@detallePedido.Cantidad</td>
                        <td>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>