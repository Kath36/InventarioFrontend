@page
@model Inventario.WebSite.Pages.DetallePedido.ListDetallePedido

<div class="container-fluid">
    <form method="get">
        <div class="row">
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="SearchString" placeholder="Search by Material ID">
            </div>
            <div class="col-md-4">
                <button type="submit" id="btnSearch" class="btn btn-primary mr-3">Search</button>
                <a asp-page="/DetallePedido/Add" class="btn btn-success" role="button">Add</a>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-10">
            <table class="table">
                <tr>
                    <th>Pedido ID</th>
                    <th>Material ID</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
                @foreach (var detallePedido in Model.DetallePedidos)
                {
                    <tr>
                        <td>@detallePedido.Pedido_ID</td>
                        <td>@detallePedido.Material_ID</td>
                        <td>@detallePedido.Cantidad</td>
                        <td>
                            <a asp-page="/DetallePedido/Edit" asp-route-id="@detallePedido.id" class="btn btn-primary" role="button">Edit</a>
                            <a asp-page="/DetallePedido/Delete" asp-route-id="@detallePedido.id" class="btn btn-danger" role="button">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>