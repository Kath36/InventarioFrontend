@page
@model Inventario.WebSite.Pages.Usuario.LoginModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "BIENVENIDO";
}
<div class="container">
    <div class="row full-height">
        <div class="col-md-6 d-flex align-items-center justify-content-center black-background">
            <h1 class="dkda-text text-white">DKDA</h1>
        </div>
        
        <div class="col-md-6 d-flex align-items-center justify-content-end blue-background">
            <div class="login-form">
                <h2>Bienvenido</h2>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="LoginRequest.Email"></label>
                        <input asp-for="LoginRequest.Email" class="form-control" />
                        <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LoginRequest.Contraseña"></label>
                        <input asp-for="LoginRequest.Contraseña" class="form-control" type="password" />
                        <span asp-validation-for="LoginRequest.Contraseña" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-dark">Entrar</button>
                        <a class="btn btn-dark" href="/Login/Add">Registrar</a>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
