@page
@model Inventario.WebSite.Pages.Usuario.LoginModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "BIENVENIDO";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2>BIENVENIDO</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LoginRequest.Email"></label>
                    <input asp-for="LoginRequest.Email" class="form-control" />
                    <span asp-validation-for="LoginRequest.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LoginRequest.Contraseña"></label>
                    <input asp-for="LoginRequest.Contraseña" class="form-control" type="password" />
                    <span asp-validation-for="LoginRequest.Contraseña" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                    <a class="btn btn-secondary" href="/Login/Add">Registrar</a>
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }
            </form>
        </div>
    </div>
</div>
