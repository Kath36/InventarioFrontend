@page
@model Inventario.WebSite.Pages.Usuario.Add

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Nuevo usuario</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="UsuarioDto.Email"></label>
                    <input asp-for="UsuarioDto.Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="UsuarioDto.Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UsuarioDto.Contraseña"></label>
                    <input asp-for="UsuarioDto.Contraseña" class="form-control" />
                    <span class="text-danger" asp-validation-for="UsuarioDto.Contraseña"></span>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary mr-3">Agregar</button>
                    <a class="btn btn-secondary" asp-page="/Login/List">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
