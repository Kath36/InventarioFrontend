@page
@model Inventario.WebSite.Pages.Proveedor.ListProveedor

<div class="container-fluid">
    <form method="get">
        <div class="row">
            <div class="col-md-8">
                <input type="text" class="form-control" asp-for="SearchString" placeholder="Buscar por nombre">
            </div>
            <div class="col-md-4">
                <button type="submit" id="btnSearch" class="btn btn-primary mr-3">Buscar</button>
                <a asp-page="/Proveedores/Add" class="btn btn-success" role="button">Agregar</a>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-10">
            <table class="table">
                <tr>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th></th>
                </tr>
                @foreach (var proveedor in Model.Proveedores)
                {
                    <tr>
                        <td>@proveedor.Nombre</td>
                        <td>@proveedor.Direccion</td>
                        <td>@proveedor.Telefono</td>
                        <td>
                            <a asp-page="/Proveedores/Edit" asp-route-id="@proveedor.id" class="btn btn-primary" role="button">Editar</a>
                            <a asp-page="/Proveedores/Delete" asp-route-id="@proveedor.id" class="btn btn-danger" role="button">Eliminar</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>