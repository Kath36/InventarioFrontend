@page
@model Inventario.WebSite.Pages.Brands.Delete


<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Delete brand</h2>
            <form method="post">
                <input type="hidden" asp-for="BrandDto.id"/>
                <div class="form-group">
                    <label asp-for="BrandDto.Name"></label>
                    <input asp-for="BrandDto.Name" class="form-control" maxlength="45"/>
                </div>
                <div class="form-group">
                    <label asp-for="BrandDto.Description"></label>
                    <input asp-for="BrandDto.Description" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="BrandDto.Description"></span>
                </div>
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Delete</button>
                        <a class="btn btn-secondary"> Cancel </a>
                    </div>
                    @if (Model.  Errors.Count > 0)
                    {
                        
                    }
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>